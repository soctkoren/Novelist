<div class="story_list_container">
	<% @stories.each do |story| %>
		<!-- one story box -->
		<div class="story_container">
			<a href=<%="/stories/#{story.id}"%>><div class="image_container" style="background-image: url(<%="#{@root_url}#{story.image_url}#{@query}"%>)">
				<div class="title_container">
					<%= story.title %>
				</div>
			</div>
			<div class="description_container">
				<div class="first_sentence_container">
				</div>
				<div class="notes_container">
					<div class="next_update">
						
					</div>
					<div class="contribute_hearts">
						
					</div>
				</div>
			</div></a>
		</div>

	<% end %>
	
</div>
