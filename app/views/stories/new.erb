<%= @story.inspect %>

<div class="form_container">
	<%= form_for @story do |f| %>
		<div>
			<%= f.label :title %>		
			<%= f.text_field :title, placeholder: "Enter..." %>	
		</div>

		<div class="image_container">
			<%= f.label :image_url %>
			<%= f.text_field :image_url %>	
		</div>

		<div class="segment_container">
			<p>do ajax call to create segement and a new sentence.</p>	
		</div>
		<p>session id will set this</p>
		<%= f.text_field :user_id %>
		
		<%= f.submit "Submit" %>
	<% end %>
</div>

